{
    "name": "@tinkoff/angular-open-source-starter",
    "version": "1.0.0",
    "scripts": {
        "postinstall": "husky install && ngcc --async",
        "ng": "ng",
        "start": "ng serve",
        "dev:ssr": "ng run demo:serve-ssr",
        "build:ssr": "ng build --configuration production && ng run demo:server:production",
        "prerender": "ng run demo:prerender",
        "build": "ng build --configuration production",
        "build:schematics": "tsc -p tsconfig.schematics.json",
        "serve:prerender": "cd dist/demo/browser && http-server",
        "compile:server": "tsc -p ./projects/demo/tsconfig.ssr.json",
        "generate:prerender": "node dist/demo/ssr/prerender",
        "test": "ng test",
        "preadd": "npm run build:schematics",
        "add": "schematics ./schematics/collection.json:library-starter --debug=false",
        "postadd": "git add ./projects",
        "lint": "eslint .",
        "format": "prettier '**/*.{svg,yml,js,ts,html,md,less,json}'",
        "stylelint": "stylelint '**/*.{less,css}'",
        "typecheck": "tsc --noEmit --skipLibCheck --incremental false --tsBuildInfoFile null",
        "release": "standard-version",
        "release:patch": "npm run release -- --release-as patch",
        "release:minor": "npm run release -- --release-as minor",
        "release:major": "npm run release -- --release-as major",
        "publish": "npm run build:all && npm run publish:all"
    },
    "description": "This is a template project to develop, create and open-source Angular libraries with demos",
    "keywords": [
        "angular",
        "ng",
        "workspace",
        "library",
        "starter",
        "tinkoff"
    ],
    "license": "Apache-2.0",
    "author": {
        "name": "Roman Sedov",
        "email": "79601794011@ya.ru",
        "url": "http://marsibarsi.me/"
    },
    "contributors": [
        "Alex Inkin <alexander@inkin.ru>",
        "Maksim Ivanov <splincodewd@yandex.ru>"
    ],
    "repository": "https://github.com/tinkoff/angular-open-source-starter",
    "bugs": "https://github.com/tinkoff/angular-open-source-starter/issues",
    "homepage": "https://github.com/tinkoff/angular-open-source-starter#README",
    "schematics": "./schematics/collection.json",
    "dependencies": {
        "@angular/animations": "^12.2.16",
        "@angular/common": "^12.2.16",
        "@angular/compiler": "^12.2.16",
        "@angular/core": "^12.2.16",
        "@angular/forms": "^12.2.16",
        "@angular/platform-browser": "^12.2.16",
        "@angular/platform-browser-dynamic": "^12.2.16",
        "@angular/platform-server": "^12.2.16",
        "@angular/router": "^12.2.16",
        "@ng-web-apis/common": "^1.9.0",
        "@ng-web-apis/universal": "^1.9.2",
        "@nguniversal/express-engine": "^9.1.1",
        "core-js": "^2.6.12",
        "express": "^4.17.3",
        "rxjs": "~6.6.7",
        "tslib": "^2.0.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~12.2.17",
        "@angular-devkit/core": "^12.2.17",
        "@angular-devkit/schematics": "^12.2.17",
        "@angular-devkit/schematics-cli": "~0.901.13",
        "@angular/cli": "^12.2.17",
        "@angular/compiler-cli": "^12.2.16",
        "@angular/language-service": "^12.2.16",
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@nguniversal/builders": "^9.1.1",
        "@tinkoff/eslint-config": "^1.29.2",
        "@tinkoff/eslint-config-angular": "^1.29.3",
        "@tinkoff/prettier-config": "^1.29.1",
        "@tinkoff/stylelint-config": "^1.30.0",
        "@types/express": "^4.17.13",
        "@types/jasmine": "~3.6.0",
        "@types/jasminewd2": "^2.0.10",
        "@types/node": "17.0.23",
        "jasmine-core": "~3.6.0",
        "jasmine-spec-reporter": "~5.0.0",
        "karma": "~6.3.17",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~3.0.2",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "^1.5.0",
        "lint-staged": "^12.3.7",
        "ng-packagr": "^12.2.7",
        "prettier": "^2.6.2",
        "standard-version": "^9.3.2",
        "ts-node": "^10.7.0",
        "tsutils": "^3.21.0",
        "typescript": "~4.3.5",
        "husky": "^7.0.4",
        "@types/estree": "^0.0.51"
    },
    "lint-staged": {
        "*.{js,ts,html,md,less,json}": [
            "npm run lint -- --fix",
            "prettier --write",
            "git add"
        ],
        "*.less": [
            "stylelint --fix",
            "git add"
        ]
    },
    "standard-version": {
        "scripts": {
            "postbump": "node scripts/syncVersions.js && git add **/package.json"
        }
    },
    "engines": {
        "node": ">= 14",
        "npm": ">= 7",
        "yarn": "Please use npm instead of yarn to install dependencies"
    }
}
